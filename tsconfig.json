{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "incremental": true,
    "lib": ["ESNext"],
    "module": "Node16",
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noErrorTruncation": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
